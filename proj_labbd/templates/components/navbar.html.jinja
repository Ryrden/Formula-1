    <div>
        <a href="/overview"><strong>SCC0541 - Laborat√≥rio de Bases de
                Dados</strong></a>
    </div>

    {% if get_username() != None %}
    <ul>
        <li>
            {% if request.path != '/report/*' %}
            <a href="/report/1" class="main-btn" role="button">
                <i class="fa-solid fa-file fa-lg"></i>
                Report 1
            </a>
            <a href="/report/2" class="main-btn" role="button">
                <i class="fa-solid fa-file fa-lg"></i>
